{
  "env": {
    "browser": true,
    "es6": true
  },
  "globals": {
    "require": true,
    "module": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module",
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": [0],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": ["warn"]
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "no-unused-vars": "off"
      }
    }
  ]
}
