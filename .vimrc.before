let mapleader = ","
set t_Co=256
if $SHELL =~ 'bin/fish'
    set shell=/bin/bash
endif

" Vundle
    """"""""""""""""""""""""""""
    """""""" Vundle Main """""""
    """"""""""""""""""""""""""""
        " requiered opts
        set nocompatible " be iMproved
        filetype off " required!
        set rtp+=~/.vim/bundle/vundle/
        call vundle#rc()
        Plugin 'gmarik/vundle'

    """"""""""""""""""""""""""""
    " Extend expected features "
    """"""""""""""""""""""""""""
        " Cycle Through words enumeration like True/False
        Plugin 'zef/vim-cycle'
        " Move between camelCaseWords
        Plugin 'bkad/CamelCaseMotion'
        " Auto close () "" [] <p>
        Plugin 'Townk/vim-autoclose'
        Plugin 'HTML-AutoCloseTag'
        " repeat
        Plugin 'tpope/vim-repeat'
        " copy to tmux (tmux should handle ubuntu xclip)
        Plugin 'lord-garbage/vimtux'

    """""""""""""""""""""""""""
    """""""" Performance  """""
    """""""""""""""""""""""""""
        " make CtrlP faster by changing is search engine
        Plugin 'JazzCore/ctrlp-cmatcher'
        Plugin 'rking/ag.vim'

    """""""""""""""""""""""""""
    """""""" IDE """"""""""""""
    """""""""""""""""""""""""""
        " IDE like for git, svn, svk, ...
        Plugin 'vcscommand.vim'
        " Store the configuration in a single file for multi editors
        " editorconfig.org
        Plugin 'editorconfig/editorconfig-vim'
        " show git diff in number columns
        Plugin 'airblade/vim-gitgutter'
        " Git commands
        Plugin 'tpope/vim-fugitive'
        " Snips
        Plugin 'SirVer/ultisnips'
        Plugin 'honza/vim-snippets'

    """"""""""""""""""""""""""""
    """""""" Movements """""""""
    """"""""""""""""""""""""""""
        Plugin 'Lokaltog/vim-easymotion'
        "Plugin 'haya14busa/vim-easyoperator-phrase'
        "Plugin 'haya14busa/vim-easyoperator-line'

    """""""""""""""""""""""""""
    """"""" Fancy """""""""""""
    """""""""""""""""""""""""""
        " gtalk
        "Plugin 'ironcamel/vimchat'
        " twitter
        Plugin 'vim-scripts/TwitVim'
        " Force terminal to use 256 colors
        Plugin 'vim-scripts/colorsupport.vim'
        "Plugin 'eudisd/vim-csapprox'
        Plugin 'w0ng/vim-hybrid'
        " Open a terminal in a Vim-buffer
        Plugin 'carlobaldassi/ConqueTerm'
        " Open a Scratch buffer, a anonymous buffer
        Plugin 'duff/vim-scratch'
        " Vim powerLine, make the status line more pretty and usefull. BUT
        " they're a bit fattys
        Plugin 'bling/vim-airline'
        Plugin 'bling/vim-bufferline'

    """""""""""""""""""""""""""
    """"""" GUI """""""""""""""
    """""""""""""""""""""""""""
        " Undo tree navigator
        Plugin 'sjl/gundo.vim'

    """""""""""""""""""""""""""
    """"""" Syntax """"""""""""
    """""""""""""""""""""""""""
        " Git
        Plugin 'tpope/vim-git'
        " Md, git markdown, git documentation, readme.md
        Plugin 'tpope/vim-markdown'
        Plugin 'nelstrom/vim-markdown-folding'
        " sql
        Plugin 'vim-scripts/sql.vim'
        Plugin 'vim-scripts/SQLComplete.vim'
        "" Python
        Plugin 'olivierverdier/python-syntax.vim'
        " HTML5
        Plugin 'othree/html5.vim'
        " less/sass css syntax enhancers
        Plugin 'groenewege/vim-less'
        " CSS3 new function syntax
        Plugin 'hail2u/vim-css3-syntax'
        " Stylus
        Plugin 'vim-stylus'
        " Jade templating
        Plugin 'digitaltoad/vim-jade'
        " Mustache / Handlebars
        Plugin 'mustache/vim-mustache-handlebars'
        " JavaScript
        Plugin 'pangloss/vim-javascript'
        Plugin 'marijnh/tern_for_vim'
        " JavaScript tests
        Plugin 'claco/jasmine.vim'
        " JavaScript jscs strict syntax checker
        Plugin 'file:///home/aemonge/lib/jscs.vim'

        " jQuery, backbone, mustache(templates) and more
        Plugin 'othree/javascript-libraries-syntax.vim'
        Plugin 'juvenn/mustache.vim'
        Plugin 'gkz/vim-ls'

    """""""""""""""""""""""""""
    """"""" Maniac """"""""""""
    """""""""""""""""""""""""""
        " align to make assignments vertically aligned
        Plugin 'Align'

    """""""""""""""""""""""""""
