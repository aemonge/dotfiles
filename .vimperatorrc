set runtimepath+=~/.vimperator/vimperator-plugins
loadplugins
map C :firebug console-focus<cr>
source ~/.vimperator/vimperator-plugins/caret-hint.js
map U :stylish toggle<cr>

" set noscrollbars
set gui=noaddons,nobookmarks,nomenu,navigation,tabs
set toolbars=noaddons,nobookmarks,navigation,nomenu,tabs
set defsearch=duckduckgo
:set defsearch=duckduckgo

" Make Firefox run faster by using JIT
set! javascript.options.jit.chrome=true

nmap <F2> :set toolbars=invtabs<CR>

" map <S-j> <C-p>
" map <S-k> <C-n>
map <C-w> :tabn<cr>
map <C-S-w> :tabp<cr>

map <C-h> :tabn<cr>
map <C-g> :tabp<cr>

map <C-1> b1<cr>
map <C-2> b2<cr>
map <C-3> b3<cr>
map <C-4> b4<cr>
map <C-5> b5<cr>
map <C-6> b6<cr>
map <C-7> b7<cr>
map <C-8> b8<cr>
map <C-9> b9<cr>
map <c-m> gT

" Run :vimperatortoggle to enable or disable Vimperator as needed.
